<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\FrameXML\UI.xsd">
	<Script file="HelpHelp.lua"/>
	<Frame name="HelpHelp">
		<Scripts>
			<OnLoad> HelpHelp.OnLoad(self); </OnLoad>
			<OnEvent> HelpHelp.OnEvent(self, event, ...); </OnEvent>
		</Scripts>
		<Frames>

			<!-- Threshold Slider with Title -->
			<Frame name="HelpHelp_Threshold">
				<Anchors>
					<Anchor point="TOPLEFT" x="16" y="-95"/>
				</Anchors>
				<Size x="125" y="40"/>
				
				<!-- Title -->
				<Layers>
					<Layer>
						<FontString text="Health Threshold" name="HelpHelp_ThresholdSubTitle" inherits="GameFontNormal" justifyH="LEFT" justifyV="TOP" >
							<Anchors>
								<Anchor point="TOPLEFT" x="0" y="0"/>
							</Anchors>
						</FontString>
					</Layer>
				</Layers>
				
				<!-- Slider -->
				<Frames>
					<Slider name="HelpHelp_HealthThresholdSlider" orientation="HORIZONTAL" inherits="OptionsSliderTemplate" minValue="0" maxValue="1" defaultValue="0.5" valueStep="0.1">
						<Size x="125" y="20"/>
						<Anchors>
							<Anchor point="TOPLEFT" x="10" y="-16"/>
						</Anchors>
						<Scripts>
							<OnLoad>       
								getglobal(self:GetName()..'Low'):SetText('')
								getglobal(self:GetName()..'High'):SetText('100%')
							</OnLoad>
							<OnValueChanged>       
								getglobal(self:GetName()..'High'):SetText(string.format('%.0f%%', tonumber(HelpHelp_HealthThresholdSlider:GetValue()) * 100))
							</OnValueChanged>
						</Scripts>   
					</Slider>
				</Frames>
			</Frame>
			
			<!-- Message Edit Box with Title -->
			<Frame name="HelpHelp_Message">
				<Anchors>
					<Anchor point="TOP" relativeTo="HelpHelp_Threshold" relativePoint="BOTTOM" x="0" y="-16"/>
				</Anchors>
				<Size x="125" y="200"/>
				
				<!-- Title -->
				<Layers>
					<Layer>
						<FontString text="Message (Max 25 Charachters)" name="HelpHelp_MessageSubTitle" inherits="GameFontNormal" justifyH="LEFT" justifyV="TOP" >
							<Anchors>
								<Anchor point="TOPLEFT" x="0" y="0"/>
							</Anchors>
						</FontString>
					</Layer>
				</Layers>
				
				<!-- Edit Box -->
				<Frames>
					<EditBox text="For the love of god" name="HelpHelp_MessageEditBox" letters="25" inherits="InputBoxTemplate" font="ChatFontSmall" autoFocus="false">
						<Size x="200" y="24" />
						<Anchors>
							<Anchor point="TOPLEFT" relativeTo="HelpHelp_MessageSubTitle" relativePoint="TOPLEFT" x="10" y="-16" />
						</Anchors>
					</EditBox>
				</Frames>
			</Frame>
			
		</Frames>
		<Layers>
		
			<!-- Overall Title and About Text -->
			<Layer level="OVERLAY">
				<FontString text="Help Help!" inherits="GameFontNormalLarge">
					<Anchors>
						<Anchor point="TOPLEFT" x="16" y="-16"/>
					</Anchors>
				</FontString>
				
				<FontString 
						text="'Help Help!' will automatically yell for help when your health drops too low. Aimed at the Role Play community, it will translate your shout to your charachters selected language (e.g. Common, Dwarvish, Orcish)" 
						inherits="SystemFont_Small"
						justifyH="LEFT"
						justifyV="TOP"
						wordwrap="true">
					<Size y="100"/>
					<Anchors>
						<Anchor point="TOPLEFT" relativePoint="TOPLEFT" x="16" y="-40"/>
						<Anchor point="TOPRIGHT" relativePoint="TOPRIGHT" x="-16" y="-40"/>
					</Anchors>
				</FontString>			
			</Layer>
		</Layers>
	</Frame>
</Ui>